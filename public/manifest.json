{
  "manifest_version": 3,
  "name": "EasyWords",
  "version": "1.0",
  "icons": {
    "16": "./images/icon16.png",
    "32": "./images/icon32.png",
    "48": "./images/icon48.png",
    "128": "./images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "tabs",
    "notifications"
  ],
  "action": {
    "default_popup": "./pages/popup.html"
  },
  "background": {
    "service_worker": "./assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./assets/content.js"
      ]
    }
  ]
}